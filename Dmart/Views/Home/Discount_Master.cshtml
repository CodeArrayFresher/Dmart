@model Dmart.Models.DiscountModel

@{
    ViewBag.Title = "Discount_Master";
}

<h2>Discount_Master</h2>

<p>
    @Html.ActionLink("Add Product Discount", "Add_Discount")
</p>


<table class="table table-dark table-bordered">
    <tr>
  
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.DiscountValue)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.DiscountType)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EffectiveFromDate)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.EffectiveToDate)
        </th>  
    </tr>

@foreach (var item in Model.discount_master) {
    <tr>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.DiscountValue)
        </td>
        <td class="text-center">
            @if (!item.DiscountType)
            {
                <p>Number</p>
            }
            else
            {
                <p>Percentage</p>
            }
        </td>
        <td class="text-center">
            @if (item.EffectiveFromDate <= DateTime.Now && item.EffectiveToDate >= DateTime.Now)
            {
                <p style="color:green; font-weight:bold;background-color:white">@item.EffectiveFromDate.ToShortDateString() </p>
               
            }
            else
            {
                @Html.DisplayFor(modelItem => item.EffectiveFromDate)

            }
        </td>
        <td class="text-center">
            @if (item.EffectiveFromDate <= DateTime.Now && item.EffectiveToDate >= DateTime.Now)
            {
                <p style="color:green; font-weight:bold;background-color:white">@item.EffectiveToDate.ToShortDateString() </p>

            }
            else
            {
                @Html.DisplayFor(modelItem => item.EffectiveFromDate)

            }
        </td>
    </tr>
}

</table>


